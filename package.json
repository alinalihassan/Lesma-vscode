{
  "name": "lesma-vscode",
  "displayName": "Lesma Language Support",
  "description": "Lesma Language Support in VSCode",
  "author": "Alin Ali Hassan",
  "publisher": "hassanalinali",
  "license": "MIT",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/alinalihassan/Lesma-vscode"
  },
  "icon": "assets/logo.png",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lesma"
  ],
  "keywords": [
    "lesma"
  ],
  "engines": {
    "vscode": "^1.77.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "title": "Lesma",
      "properties": {
        "lesma.compilerPath": {
          "type": [
            "string",
            "null"
          ],
          "scope": "machine-overridable",
          "default": null,
          "description": "Lesma installation path"
        }
      }
    },
    "languages": [
      {
        "id": "lesma",
        "aliases": [
          "Lesma",
          "lesma"
        ],
        "icon": {
          "light": "./assets/logo.svg",
          "dark": "./assets/logo.svg"
        },
        "extensions": [
          ".les"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lesma",
        "scopeName": "source.lesma",
        "path": "./syntaxes/lesma.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "lesma.run",
        "title": "Lesma: Run"
      },
      {
        "command": "lesma.install",
        "title": "Lesma: Install"
      },
      {
        "command": "lesma.run-with-flags",
        "title": "Lesma: Run with Flags"
      }
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "typescript": "^5.0.2"
  }
}
